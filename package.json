{
  "name": "luc.boissaye.fr",
  "description": "My website",
  "author": "Luc Boissaye",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ombr/ombr.github.io.git"
  },
  "scripts": {
    "start": "npm-run-all clean --parallel dev:*",
    "clean": "rimraf _site",
    "build": "NODE_ENV=production npm-run-all clean prod:postcss prod:eleventy",
    "dev:eleventy": "eleventy --serve",
    "dev:postcss": "postcss -w index.css -o _site/index.css",
    "prod:postcss": "postcss index.css -o _site/index.css",
    "prod:eleventy": "ELEVENTY_ENV=production eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
  }
}
